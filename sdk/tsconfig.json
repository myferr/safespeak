{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "**/*.ts", "lib/test.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
